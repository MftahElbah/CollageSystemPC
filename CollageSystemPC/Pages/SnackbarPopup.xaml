<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollageSystemPC.Pages.SnackbarPopup"
             FlowDirection="RightToLeft"
             IsVisible="False"
             x:Name="Message">

    <Border Padding="15,10" BackgroundColor="#1a1a1a" VerticalOptions="Center" HorizontalOptions="Center" x:Name="ConBoarder" Margin="20">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="20"/>
        </Border.StrokeShape>
        <Border.Shadow>
            <Shadow Brush="#1a1a1a"
                    Opacity="0.5"
                    Radius="05"
                    Offset="0,10" />
        </Border.Shadow>

        
            <Label x:Name="SnackbarMessageLabel"
               Text="لا يوجد اتصال على الشبكة"
               FontSize="12"
               FontFamily="CairoB"
               TextColor="#EFEFEF"/>
    </Border>
</ContentView>
