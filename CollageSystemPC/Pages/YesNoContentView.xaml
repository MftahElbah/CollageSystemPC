<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:icon="clr-namespace:CollageSystemPC"
             FlowDirection="RightToLeft"
             x:Class="CollageSystemPC.Pages.YesNoContentView"
             BackgroundColor="#80000000">
    <Border x:Name="PopupEditDegreeBorder" Padding="20" BackgroundColor="#EFEFEF" VerticalOptions="Center" HorizontalOptions="Center" Margin="20,0">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="20"/>
        </Border.StrokeShape>
        <Border.Shadow>
            <Shadow Brush="#1a1a1a"
                    Opacity="0.5"
                    Radius="05"
                    Offset="0,10" />
        </Border.Shadow>
        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
            
        <Label Text="هل انت متأكد ؟" 
               FontSize="32" 
               HorizontalOptions="Center" 
               VerticalOptions="Center"
               FontAttributes="Bold" 
               FontFamily="CairoB" 
               TextColor="#1a1a1a"/>
            <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">

                <Button CornerRadius="20" 
                BackgroundColor="#D3B05F"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontFamily="CairoB"
                Text="نعم"
                TextColor="#1a1a1a"
                Clicked="YesClicked"/>
                <Button CornerRadius="20" 
                BackgroundColor="#1a1a1a"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontFamily="CairoB"
                Text="لا"
                TextColor="#efefef"
                Clicked="NoClicked"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>

    </Border>
</ContentView>
